<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/cell_start_overlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/cell_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cell_label"
        app:layout_constraintWidth_percent="0.5" />

    <View
        android:id="@+id/cell_end_overlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/cell_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cell_label"
        app:layout_constraintWidth_percent="0.5"
        tools:background="@drawable/cal_day_bg_middle" />

    <TextView
        android:id="@+id/cell_label"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/scv_cell_inner_margin"
        android:layout_marginBottom="@dimen/scv_cell_inner_margin"
        android:gravity="center"
        android:textSize="@dimen/text_size_h4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@drawable/cal_day_bg_single"
        tools:layout_height="56dp"
        tools:layout_width="56dp"
        tools:text="22" />

</androidx.constraintlayout.widget.ConstraintLayout>